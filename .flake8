# Flake8 Configuration
# Code style checker for Python

[flake8]
# Base configuration
max-line-length = 100
max-complexity = 10
statistics = True
count = True
show-source = True

# File patterns
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */venv/*,
    */virtualenv/*,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    staticfiles,
    media

# Ignore specific errors
# E203: whitespace before ':' (conflicts with black)
# E501: line too long (handled by black)
# W503: line break before binary operator (conflicts with black)
# W504: line break after binary operator
ignore = E203, E501, W503, W504

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    */settings/*.py:F401,E402
    */tests/*.py:F401,F403,F811

# Select error codes to check
select = B,C,E,F,W,T4,B9

# Maximum allowed McCabe complexity
max-complexity = 10

# Docstring conventions (numpy style)
docstring-convention = numpy

# Import order checking (compatible with isort)
import-order-style = pycharm
application-import-names = apps,deltacrown
