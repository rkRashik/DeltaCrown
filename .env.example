# =============================================================================
# DeltaCrown Tournament Engine - Environment Variables
# =============================================================================
# This file documents all required environment variables for the application.
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!

# =============================================================================
# Django Core Settings
# =============================================================================
# Settings module: development, staging, or production
DJANGO_SETTINGS_MODULE=deltacrown.settings.development
DJANGO_SECRET_KEY=your-secret-key-here-generate-random-50-chars
DJANGO_DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_NAME=deltacrown_dev
DB_USER=deltacrown_user
DB_PASSWORD=change_me_in_production
DB_HOST=localhost
DB_PORT=5432

# Database URL format (alternative to individual vars)
# DATABASE_URL=postgresql://deltacrown_user:password@localhost:5432/deltacrown_dev

# =============================================================================
# Redis Configuration (Cache & Sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# =============================================================================
# Celery Configuration (Async Tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=False

# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@deltacrown.com

# =============================================================================
# Site Configuration
# =============================================================================
SITE_URL=http://localhost:8000
SITE_ID=1

# =============================================================================
# AWS Configuration (Production - S3 for media files)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=deltacrown-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# =============================================================================
# Payment Gateway (Stripe)
# =============================================================================
STRIPE_PUBLIC_KEY=pk_test_your_public_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# OAuth / Social Authentication
# =============================================================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
ENABLE_ALLAUTH=0

# =============================================================================
# Error Tracking (Sentry)
# =============================================================================
SENTRY_DSN=https://your-key@sentry.io/your-project-id
SENTRY_ENVIRONMENT=development

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REGISTRATION=True
ENABLE_PAYMENT_GATEWAY=False
ENABLE_SOCIAL_AUTH=False
ENABLE_EMAIL_VERIFICATION=False

# =============================================================================
# Discord Webhook (Notifications)
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# =============================================================================
# Docker Services (for docker-compose)
# =============================================================================
DJANGO_PORT=8000
NGINX_PORT=8080

# =============================================================================
# Testing Configuration
# =============================================================================
FAST_TESTS=1
ACCOUNT_EMAIL_VERIFICATION=optional

# =============================================================================
# Security (Production Only)
# =============================================================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
